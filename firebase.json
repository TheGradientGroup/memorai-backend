{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "rewrites": [
      {
        "source": "/cards",
        "function": "cards"
      },
      {
        "source": "/decks",
        "function": "decks"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}